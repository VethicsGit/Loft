<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/section_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Section name"/>
    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 "/>

        <TextView
            android:id="@+id/course_chep_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chapter Name"/>

        <ImageView
            android:id="@+id/course_chep_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_150sdp"
            app:srcCompat="@drawable/ic_vertical_align_bottom_black_24dp"
            android:layout_gravity="end"/>
    </LinearLayout>
        <TextView
            android:id="@+id/course_categori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="categori"/>

</LinearLayout>
