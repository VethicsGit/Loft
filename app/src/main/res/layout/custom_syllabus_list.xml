<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    android:orientation = "vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:background = "@color/colorAccent"
        android:orientation = "vertical">

        <TextView
            android:id = "@+id/tv_syllabus_main_header_title"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_marginEnd = "8dp"
            android:layout_marginStart = "8dp"
            android:padding = "@dimen/_3sdp"
            android:textColor = "@color/colorWhite"
            android:textSize = "20sp"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toEndOf = "@+id/imageView8"
            app:layout_constraintTop_toTopOf = "parent"
            tools:text = "Course Content Title" />

        <ImageView
            android:id = "@+id/imageView8"
            android:layout_width = "20dp"
            android:layout_height = "20dp"
            android:padding="@dimen/_1sdp"
            android:layout_marginStart = "8dp"
            app:layout_constraintBottom_toBottomOf = "@+id/tv_syllabus_main_header_duration"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toTopOf = "@+id/tv_syllabus_main_header_title"
            app:srcCompat = "@drawable/ic_app_complete" />

        <TextView
            android:id = "@+id/tv_syllabus_main_header_duration"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_marginEnd = "8dp"
            android:layout_marginStart = "8dp"
            android:padding = "@dimen/_3sdp"
            android:textColor = "@color/colorWhite"
            android:textSize = "16sp"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toEndOf = "@+id/imageView8"
            app:layout_constraintTop_toBottomOf = "@+id/tv_syllabus_main_header_title"
            tools:text = "Course Content Duration" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id = "@+id/ll_syllabus_sub_content"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "vertical" />
</LinearLayout>